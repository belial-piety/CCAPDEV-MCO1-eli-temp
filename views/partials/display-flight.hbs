{{!-- Complete --}}

<div class="flight-card border rounded-lg shadow-sm p-3 my-2 bg-white w-full">
  <div class="container row g-3 align-items-center justify-content-center">
    <!-- Airline, Flight Number -->

    <div class="col-12 col-lg-3 mx-0 d-flex flex-lg-column flex-row text-start justify-content-between">
      <p class="m-0"><b>Airline:</b> {{#if flight}}{{flight.airline}}{{else}}N/A{{/if}}</p>
      <p class="m-0"><b>Flight:</b> {{#if flight}}{{flight.flightNumber}}{{else}}N/A{{/if}}</p>
    </div>

    <div class="col-4 col-lg-3 mx-0 px-0 flex flex-col text-start">
      <div class="text-gray-500">
        <p class="m-0 "><b>From:</b> {{#if flight}}{{flight.origin}}{{else}}N/A{{/if}}</p>
        <p class="m-0"> {{#if flight}}{{formatDate flight.departure "MMM D, YYYY hh:mm A"}}{{else}}N/A{{/if}}
        </p>
      </div>
    </div>

    <!-- Destination + Arrival -->
    <div class="col-4 col-lg-3 mx-0 px-0 flex flex-col text-start">
      <div class="text-gray-500">
        <p class="m-0 "><b>To:</b> {{#if flight}}{{flight.destination}}{{else}}N/A{{/if}}</p>
        <p class="m-0"> {{#if flight}}{{formatDate flight.arrival "MMM D, YYYY hh:mm A"}}{{else}}N/A{{/if}}</p>
      </div>
    </div>

    <!-- Price -->
    <div class="col-10 col-lg-2 text-start me-auto me-lg-0">
      {{#if showAircraft}}
      <p class="m-0"><b>Aircraft:</b> {{#if flight}}{{flight.aircraft.model}}{{else}}N/A{{/if}}</p>
      {{else}}
      {{#if booking}}
      <p class="m-0"><b>Status:</b> {{booking.status}}
      {{else}}
      <p class="m-0"><b>Duration:</b> {{flight.duration.hours}}h {{flight.duration.minutes}}m</p>
      {{/if}}
      {{/if}}

      {{#if showAircraft}}
      <p class="m-0"><b>Capacity:</b> {{#if flight}}{{flight.aircraft.capacity}}{{else}}N/A{{/if}}</p>
      {{else}}
      <p class="m-0"><b>Price:</b>
      {{#if booking}}${{booking.totalPrice}}
      {{else}}{{#if flight}}${{flight.price}}
      {{else}}N/A{{/if}}{{/if}}
      {{/if}}

    </div>

    <!-- Select Button -->
    <div class="col-2 col-lg-1 ms-auto">
      {{#if buttonModal}}

      <button type="button" class="px-4 py-3 btn btn-primary btn-sm" data-bs-toggle="modal"
        data-bs-target="#{{modalName}}-{{#if booking}}{{booking._id}}{{else}}{{flight._id}}{{/if}}">
        {{buttonLabel}}
      </button>

      {{/if}}

      {{#if buttonForm}}
      <form action="{{formAction}}" method="{{formMethod}}">
        <input type="hidden" name="flightId" value="{{flight._id}}">
        <button type="submit" class="px-4 py-3 btn btn-primary btn-sm">
          {{buttonLabel}}
        </button>
      </form>
      {{/if}}

    </div>
  </div>
</div>