<div class="accordion" id="accordion-{{list-id}}">
  <div class="accordion-item rounded-4 shadow-sm mb-4">
    <!-- Accordion Header -->
    <h2 class="accordion-header" id="heading-{{list-id}}">
      <button class="accordion-button bg-transparent text-dark shadow-none" 
              type="button" 
              data-bs-toggle="collapse" 
              data-bs-target="#collapse-{{list-id}}" 
              aria-expanded="true" 
              aria-controls="collapse-{{list-id}}">
        <div class="d-flex flex-column">
          <h4 class="fw-semibold mb-0">{{header}}</h4>
          <p class="text-muted mb-0">{{subheader}}</p>
        </div>
      </button>
    </h2>

    <!-- Accordion Body -->
    <div id="collapse-{{list-id}}" class="accordion-collapse collapse show" 
         aria-labelledby="heading-{{list-id}}" data-bs-parent="#accordion-{{list-id}}">
      <div class="accordion-body" id="{{list-id}}">
      </div>
    </div>
  </div>
</div>
