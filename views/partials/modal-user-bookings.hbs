<div class="modal fade" id="reservationsModal-{{user._id}}" tabindex="-1"
    aria-labelledby="reservationsModalLabel-{{user._id}}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="reservationsModalLabel-{{user._id}}">
                    Reservations for {{user.firstName}} {{user.lastName}}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="reservation-list-{{user._id}}">
                    {{{displays}}}
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>